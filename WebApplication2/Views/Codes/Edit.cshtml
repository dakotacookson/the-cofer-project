@model WebApplication2.Models.Code
@{
    ViewData["Title"] = "Edit";
}
<h1>Edit Existing Code</h1>
<h4>Code</h4>
<hr />
<div class="row justify-content-around text-center">
    <div class="col-sm-8">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CodeLanguge" class="control-label"></label>
                <input asp-for="CodeLanguge" class="form-control" />
                <span asp-validation-for="CodeLanguge" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descreption" class="control-label"></label>
                <input asp-for="Descreption" class="form-control" />
                <span asp-validation-for="Descreption" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Hiden" /> @Html.DisplayNameFor(model => model.Hiden)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="CodeDeposit" class="control-label"></label>
                <textarea style="margin-top: 0px; margin-bottom: 0px; height: 536px;" asp-for="CodeDeposit" class="form-control"></textarea>
                <span asp-validation-for="CodeDeposit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a  class="btn btn-success"  asp-action="MyCode">Back to List</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
