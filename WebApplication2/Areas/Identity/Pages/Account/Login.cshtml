@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<h1 class="row2">@ViewData["Title"]</h1>
<div class="row1">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <h4>Use a local account to log in.</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="row3">

                    <div class="form-group row4">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control row2" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="form-group row4">
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" class="form-control row2" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="row3">

                    <div class="form-group row4">
                        <button type="submit" class="btn btn-primary row2">Log in</button>
                    </div>
                    <div class="form-group row4">
                        <p>
                            <a class="btn btn-primary row2" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register</a>
                        </p>
                    </div>
                </div>
                <div class="form-group row4">
                    <div class="checkbox">
                        <label class="btn btn-primary row2" asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
